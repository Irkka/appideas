= form_for @idea, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :desc, :class => 'control-label'
    .controls
      = f.text_field :desc, :class => 'text_field'
  .control-group
    = f.label :keywords, :class => 'control-label'
    .controls
      = f.collection_check_boxes(:keyword_ids, @keywords, :id, :name)
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), ideas_path, :class => 'btn'
